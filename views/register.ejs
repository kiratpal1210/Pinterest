<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-zinc-900 flex items-center justify-center">
    <div class="w-[25vw] bg-white px-10 py-10 rounded-[20px]">
      <h1 class="text-3xl text-center mb-3 font-semibold text-zinc-600 tracking-tight capitalize leading-none ">Create new Account</h1>
      <form action="/register" method="post">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <!-- <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forgot password ?</a> -->
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create new account">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing Account!</a>
    </div>
  </div>
<% include ./partials/footer.ejs %>